<h1>EAT-DA-BURGER</h1>

{{!-- <h2>Burgers To Eat</h2> --}}

<div>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="devour-burger" data-id="{{id}}">
                    DEVOUR IT!        
                </button>
                {{!-- <button class="delete-burger" data-id="{{this.id}}">DELETE</button> --}}
            </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>

{{!-- <h2>Burgers Already Eaten</h2> --}}

<div>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
                <button class="delete-burger" data-id="{{this.id}}">DELETE</button>
            </li>
            {{/if}}
        {{/each}}
    </ul>
</div>

<div>
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        {{!-- <div class="form-group">
            <label for="eaten">Already Eaten?</label><br>
            <input type="radio" name="eaten" value="1" checked> Eaten <br>
            <input type="radio" name="eaten" value="0"> To Eat
        </div> --}}

        <button type="submit">Add Burger</button>
    </form>
</div>