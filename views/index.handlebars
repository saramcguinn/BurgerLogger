<h1>Burgers</h1>

<h2>Burgers To Eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{!-- {{burgers devoured=false}} --}}
    {{!-- {{> cats/cat-block sleep=true}} --}}
    <li>
        {{burger_name}}
        <button class="devour-burger" data-id="{{id}}" data-newsleep="{{sleep}}">
            DEVOUR IT!        
        </button>
        <button class="delete-burger" data-id="{{this.id}}">DELETE</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Already Eaten</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
        {{burger_name}}
        <button class="delete-burger" data-id="{{this.id}}">DELETE</button>
    </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="eaten">Already Eaten?</label><br>
        <input type="radio" name="eaten" value="1" checked> Eaten <br>
        <input type="radio" name="eaten" value="0"> To Eat
    </div>

    <button type="submit">Add Burger</button>
</form>