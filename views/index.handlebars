<img src="/assets/img/burger-clipart.png" width=200>
<h1>EAT-DA-BURGER</h1>

<div class="container">
    <div id="toBeDevoured-div">
        <h2>To Be Devoured:</h2>
        <br>
        <ol>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="devour-burger" data-id="{{id}}">
                    DEVOUR IT!
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ol>
    </div>

    <div id="devoured-div">
        <h2>Devoured:</h2>
        <br>
        <ol>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
                <button class="delete-burger" data-id="{{this.id}}">X</button>
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>

<div>
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
            <button type="submit">Add Burger</button>
        </div>
    </form>
</div>